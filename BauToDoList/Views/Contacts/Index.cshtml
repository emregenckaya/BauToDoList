@model IEnumerable<BauToDoList.Models.Contact>

@{
    ViewBag.Title = "Kişi Listele";
}

<h2>Kişi Listele</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-primary" })
